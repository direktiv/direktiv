{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // if noUncheckedIndexedAccess is false, someArrayOfObj[0].someKey will not raise a TS error if the array is empty
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "page-dialog": [
        "./src/pages/namespace/Explorer/Page/poc/PageCompiler/Block/Dialog"
      ],
      "page-blockwrapper": [
        "./src/pages/namespace/Explorer/Page/poc/PageCompiler/BlockWrapper"
      ]
    }
  },
  "include": ["src", "e2e", "vite.config.mts"]
}
